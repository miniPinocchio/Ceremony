<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title_switch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.08"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_index_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_qlqj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情礼情境" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white40" />

        <LinearLayout
            android:id="@+id/ll_index_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_qldx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情礼对象" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white40" />

        <LinearLayout
            android:id="@+id/ll_index_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_dxah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对象爱好" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white40" />

        <LinearLayout
            android:id="@+id/ll_index_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_jrsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="节日送礼" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white40" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_gift_plan_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" />


</LinearLayout>