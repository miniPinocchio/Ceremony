<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:makeramen="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/fl_tab_base_pager_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/lv_gift_tab_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.liuhui.ceremony.app.ui.customview.roundedimageview.RoundedImageView
            android:id="@+id/iv_fengmian"
            android:layout_width="match_parent"
            android:background="@mipmap/aaaa"
            android:layout_height="150dp"
            app:riv_corner_radius="30dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_item_icon_commentnum"
            android:background="@mipmap/icon_1"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="32"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_item_icon_hit"
            android:background="@mipmap/icon_hit"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="32"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_item_icon_share"
            android:background="@mipmap/icon_share"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="32"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_item_icon_fav"
            android:background="@mipmap/icon_fav"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="32"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>