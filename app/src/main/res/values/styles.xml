<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tab_item">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@color/white40</item>

        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="textCursorDrawable">
        <item name="android:textCursorDrawable">@null</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">0.8</item>
        <item name = "android:textSize">14sp</item>
    </style>

    <style name="personalUiButton">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:drawablePadding">16dp</item>
        <item name="android:drawableRight">@mipmap/icon_next</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name = "android:textSize">14sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/blackaa</item>
    </style>
</resources>
